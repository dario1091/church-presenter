<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ChurchPresenter.ViewModels"
        xmlns:models="using:ChurchPresenter.Models"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="700"
        x:Class="ChurchPresenter.Views.EditSongDialog"
        x:DataType="vm:EditSongViewModel"
        Title="Editar Canción"
        SizeToContent="Height"
        MinWidth="600" MaxWidth="800"
        MinHeight="400" MaxHeight="800"
        Width="600"
        WindowStartupLocation="CenterOwner" Background="{DynamicResource BackgroundBrush}">

    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom"  Margin="0">
            <StackPanel DockPanel.Dock="Right" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Spacing="10" 
                        Margin="20">
                <Button Content="Cancelar" Click="OnCancelClick"/>
                <Button Content="Guardar" Click="OnSaveClick"/>
            </StackPanel>
        </DockPanel>

        <ScrollViewer>
            <StackPanel Margin="20" Spacing="10">
                <TextBlock Text="Título:"/>
                <TextBox Text="{Binding Title}"/>
                
                <TextBlock Text="Autor:"/>
                <TextBox Text="{Binding Author}"/>
                
                <TextBlock Text="Letra:" Margin="0,10,0,0"/>
                <TextBlock Text="Use VERSE I, VERSE II, etc. para versos y CHORUS para el coro" 
                        FontStyle="Italic" Opacity="0.7" Margin="0,0,0,5"/>
                <TextBox Text="{Binding LyricsText}" 
                        AcceptsReturn="True" 
                        TextWrapping="Wrap"
                        MinHeight="300"
                        MaxHeight="500"
                        FontFamily="Consolas,Menlo,monospace"/>
                
                <TextBlock Text="Notas:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Notes}" Height="50"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>